<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Betawave.UserCreatePlaylist"
             Title="Create Playlist">

    <Frame CornerRadius="15" Margin="0" Padding="0" HeightRequest="400" WidthRequest="350">
        <VerticalStackLayout Margin="0" Background="#27232E">
            <Label Text="Name your new playlist" TextColor="#ffffff" 
                   VerticalOptions="Center" HorizontalOptions="Center" Margin="10" FontSize="20" />
            <Entry Placeholder="type new playlist name" Margin="10" 
                    Background="#ffffff"/>
            <Button Text="Create Playlist" Clicked="CreatePlaylist_Clicked" FontSize="20" Margin="10"
                     />
            <Button Text="Back" FontSize="20" Margin="10"
                    Clicked="BackButton_Clicked" />
        </VerticalStackLayout>
    </Frame>
</ContentPage>
