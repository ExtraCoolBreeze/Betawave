<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Betawave.CreatePlaylist"
             Title="CreatePlaylist">
    
    <Frame CornerRadius="15" Margin="0" Padding="0" HeightRequest="400" WidthRequest="350">
        <VerticalStackLayout Margin="0" Background="#27232E">
            <Label 
            Text="Name your playlist" Background="#ffffff"
            VerticalOptions="Center" 
            HorizontalOptions="Center" Margin="5" />
            <Label 
            Text=""
            VerticalOptions="Center" 
            HorizontalOptions="Center" Margin="5" />
            <Entry Placeholder="type new playlist name" Margin="5" Background="#ffffff"/>
            <Button Text="Enter" FontSize="20" Margin="5"></Button>
            <Button Text="Back" FontSize="20" Margin="5" x:Name="CPBackButton" Clicked="CPBackButton_Clicked"></Button>

        </VerticalStackLayout>
    </Frame>

</ContentPage>