<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Betawave.CreatePlaylist"
             Title="CreatePlaylist">
    
    <Frame CornerRadius="15" Margin="0" Padding="0" HeightRequest="400" WidthRequest="350">
        <VerticalStackLayout Margin="0" Background="#27232E">
            <Label 
            Text="Name your new playlist" TextColor="#ffffff" VerticalOptions="Center" HorizontalOptions="Center" Margin="10" FontSize="20" />
            <Entry Placeholder="type new playlist name" Margin="10" x:Name="PlaylistNameEntry" Background="#ffffff"/>
            <Button Text="Create" FontSize="20" Margin="10" x:Name="CPCreate" Clicked="CPCreateButton_Clicked"></Button>
            <Button Text="Back" FontSize="20" Margin="10" x:Name="CPBackButton" Clicked="CPBackButton_Clicked"></Button>

        </VerticalStackLayout>
    </Frame>

</ContentPage>